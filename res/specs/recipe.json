                                    "procedure",
                                    "ingredients",
                                    "result",
                                    "options"
                                ]
                            },
                            {
                                "properties": {
                                    "procedure": {
                                        "type": "string",
                                        "enum": [
                                            "copy"
                                        ]
                                    },
                                    "ingredients": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        },
                                        "uniqueItems": true,
                                        "maxItems": 1
                                    },
                                    "result": {
                                        "type": "string"
                                    },
                                    "options": {
                                        "type": "object",
                                        "properties": {
                                            "dictionary": {
                                                "type": "object",
                                                "patternProperties": {
                                                    ".*": {
                                                        "oneOf":[
                                                            {"type": "string"},
                                                            {
                                                                "type": "array",
                                                                "items": {
                                                                    "type": "string"
                                                                }
                                                            }
                                                        ]
                                                    }
                                                }
                                            }
                                        },
                                        "required": ["dictionary"]
                                    }
                                },
                                "required": [
                                    "procedure",
                                    "ingredients",
                                    "result",
                                    "options"
                                ]
                            },
                            {
                                "properties": {
                                    "procedure": {
                                        "type": "string",
                                        "enum": [
                                            "extract_concepts"
                                        ]
                                    },
                                    "ingredients": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        },
                                        "uniqueItems": true
                                    },
                                    "result": {
                                        "type": "string"
                                    },
                                    "options": {
                                        "type": "object",
                                        "properties": {
                                            "join": {
                                                "type": "object",
