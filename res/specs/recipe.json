                                    "ingredients",
                                    "result",
                                    "options"
                                ]
                            },
                            {
                                "properties": {
                                    "procedure": {
                                        "type": "string",
                                        "enum": [
                                            "serve"
                                        ]
                                    },
                                    "ingredients": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        },
                                        "uniqueItems": true
                                    },
                                    "result": {
                                        "type": "string"
                                    },
                                    "options": {
                                        "type": "object"
                                    }
                                },
                                "required": [
                                    "procedure",
                                    "ingredients"
                                ]
                            },
                            {
                                "properties": {
                                    "procedure": {
                                        "type": "string",
                                        "enum": [
                                            "merge"
                                        ]
                                    },
                                    "ingredients": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        },
                                        "uniqueItems": true
