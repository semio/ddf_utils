                                                    }
                                                }
                                            },
                                            "include_keys": {
                                                "type": "boolean"
                                            },
                                            "overwrite": {
                                                "type": "object",
                                                "patternProperties": {
                                                    ".*":{
                                                        "type": "string"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                },
                                "required": [
                                    "procedure",
                                    "ingredients",
                                    "result",
                                    "options"
