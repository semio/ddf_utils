                                                            {
                                                                "type": "string",
                                                                "enum": [
                                                                    "expanding"
                                                                ]
                                                            }
                                                        ]
                                                    },
                                                    "min_periods": {"type": "number"},
                                                    "center": {"type": "boolean"},
                                                    "aggregate": {
                                                    "type": "object",
                                                    "patternProperties": {
                                                        ".*": {
                                                            "oneOf":[
                                                                {"type": "string"},
                                                                {
                                                                    "type": "object",
                                                                    "properties": {
                                                                        "function": {"type": "string"}
                                                                    },
                                                                    "required": ["function"]
                                                                    }
                                                                ]
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                },
                                "required": [
                                    "procedure",
                                    "ingredients",
                                    "result",
                                    "options"
                                ]
                            },
                            {
                                "properties": {
                                    "procedure": {
                                        "type": "string",
                                        "enum": [
                                            "filter_row"
                                        ]
                                    },
                                    "ingredients": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        },
                                        "uniqueItems": true,
                                        "maxItems": 1
                                    },
                                    "result": {
                                        "type": "string"
                                    },
                                    "options": {
                                        "type": "object",
                                        "properties": {
                                            "dictionary":{
                                                "type": "object",
                                                "patternProperties": {
                                                    ".*": {
                                                        "type": "object",
                                                        "properties": {
                                                            "from": {"type": "string"}
                                                        },
                                                        "required": ["from"]
                                                    }
                                                }
                                            },
                                            "keep_all_columns": {"type": "boolean"}
                                        },
                                        "required": ["dictionary"]
                                    }
                                },
                                "required": [
                                    "procedure",
                                    "ingredients",
                                    "result",
                                    "options"
