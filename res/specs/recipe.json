                                    "ingredients": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        },
                                        "uniqueItems": true,
                                        "maxItems": 1
                                    },
                                    "result": {
                                        "type": "string"
                                    },
                                    "options": {
                                        "type": "object",
                                        "patternProperties": {
                                            "^bridge_(start|end)$": {
                                                "type": "object",
                                                "properties": {
                                                    "ingredient": {"type": "string"},
                                                    "column": {"type": "string"}
