{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "info": {
            "type": "object",
            "properties": {
                "id": {"type": "string"}
            }
        },
        "config": {
            "type": "object",
            "properties": {
                "ddf_dir": {"type": "string"},
                "recipes_dir": {"type": "string"},
                "dictionary_dir": {"type": "string"}
            }
        },
        "ingredients": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "object",
                "properties": {
                    "id": {"type": "string"},
                    "dataset": {"type": "string"},
                    "key": {"type": "string"},
                    "value": {
                        "oneOf":[
                            {
                                "type": "string", 
                                "enum": ["*"]
                            },
                            {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        ]
                    },
                    "row_fliter": {"type": "string"}
                },
                "required": ["id", "dataset", "key", "value"]
            }
        },
        "cooking": {
            "type": "object",
            "properties": {
                "datapoints": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "anyOf": [
                            {
                                "properties": {
                                    "procedure": {
                                        "type": "string",
                                        "enum": [
                                            "translate_header"
                                        ]
                                    },
                                    "ingredients": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        },
                                        "uniqueItems": true,
                                        "maxItems": 1
